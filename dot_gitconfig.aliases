# vim: set ft=gitconfig:

[alias]
  alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /

  amend = commit --amend

  br = branch -a -v

  cm = commit -m

  cempty = commit -m "empty" --allow-empty

  co = checkout
  cob = checkout -b

  nuke = ! git reset --hard HEAD; git clean -f -d

  rp = rev-parse

  s = status

