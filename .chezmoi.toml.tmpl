{{- $name := get . "name" -}}
{{- if not $name -}}
{{-   $name = promptString "name" -}}
{{- end -}}

{{- $email := get . "email" -}}
{{- if not $email -}}
{{-   $email = promptString "email" -}}
{{- end -}}

[data]
    name = {{ $name | quote }}
    email = {{ $email | quote }}

    install_gitstatus = true
    install_grc = true
